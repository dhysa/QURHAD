<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:font="http://schemas.android.com/apk/res/com.android.qurhad"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/broken_white"
              android:orientation="vertical">

    <include layout="@layout/header_page"/>
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:paddingBottom="50dp"
                    android:gravity="center"
                    android:background="@color/light_brown">

                <com.android.qurhad.TextViewPlus
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="@string/title_tentangQurhad"
                        android:textColor="@color/brown"
                        font:customFont="fonts/CFJackStory.ttf"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/about"
                        android:textColor="@color/brown"
                        android:gravity="center|top"/>

                <Button android:id="@+id/buttonFeedback"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/brown"
                        android:text="@string/feedback"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

            </LinearLayout>

        </ScrollView>


</LinearLayout>